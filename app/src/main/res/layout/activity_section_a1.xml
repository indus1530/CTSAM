                            <TextView
                                style="@style/i_textview"
                                android:text="@string/a114" />

                            <EditText
                                android:id="@+id/a114"
                                style="@style/EditTextAlpha"
                                android:hint="@string/name" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- a115  Input   -->
