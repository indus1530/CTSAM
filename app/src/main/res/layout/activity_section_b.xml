            <!-- muac1  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVmuac1"
                style="@style/cardView">

                <LinearLayout style="@style/hlinearlayout">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_muac1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_muac1"
                            android:text="@string/muac1" />

                        <TextView
                            android:id="@+id/q_muac1"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_muac1"
                            android:layout_alignBottom="@id/qtxt_muac1"
                            android:text="@string/Q_muac1" />
                    </RelativeLayout>

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/muac1"
                        style="@style/EditTextNum"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="##.#"
                        app:mask="##.#"
                        app:maxValue="21"
                        app:minValue="11"
                        app:pattern="^(\\d{2,2}\\.\\d{1,1})$"
                        app:type="range" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

