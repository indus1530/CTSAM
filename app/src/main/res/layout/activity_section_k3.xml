                android:id="@+id/fldGrpCVk221_title"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/k221_title" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- k221  Spinner and Input-Numeric   -->
            <LinearLayout style="@style/linearlayout_view_wt_bound">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/i_textview"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/k221a" />

                    <Spinner
                        android:id="@+id/k221a"
                        style="@style/spinner"
                        android:layout_width="0dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout style="@style/linearlayout_view">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/k221" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/k221"
                        style="@style/EditTextNum"
                        android:hint="@string/num"
                        android:maxLength="3"
                        app:maxValue="100"
                        app:minValue="1"
                        app:type="range" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- k222  Spinner and Input-Numeric   -->
