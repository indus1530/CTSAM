<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.ctsam.ui.sections.SectionAActivity" />
    </data>

    <ScrollView
        style="@style/i_scrollview"
        android:layoutDirection="rtl"
        android:textDirection="rtl">

        <LinearLayout
            android:id="@+id/fldGrpSectionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fldGrpSectionA01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- s1q2  Spinner   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVs1q2"
                    style="@style/cardView">


                    <LinearLayout style="@style/hlinearlayout">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bottom">

                            <TextView
                                android:id="@+id/qtxt_s1q2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/q_s1q2"
                                android:text="@string/s1q2" />

                            <TextView
                                android:id="@+id/q_s1q2"
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/qtxt_s1q2"
                                android:layout_alignBottom="@id/qtxt_s1q2"
                                android:text="@string/Q_s1q2" />
                        </RelativeLayout>

                        <Spinner
                            android:id="@+id/s1q2"
                            style="@style/spinner"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="@string/s1q2" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- s1q1  Spinner   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVs1q1"
                    style="@style/cardView">

                    <LinearLayout style="@style/hlinearlayout">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bottom">

                            <TextView
                                android:id="@+id/qtxt_s1q1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/q_s1q1"
                                android:text="@string/s1q1" />

                            <TextView
                                android:id="@+id/q_s1q1"
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/qtxt_s1q1"
                                android:layout_alignBottom="@id/qtxt_s1q1"
                                android:text="@string/Q_s1q1" />
                        </RelativeLayout>

                        <Spinner
                            android:id="@+id/s1q1"
                            style="@style/spinner"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="@string/name" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- s1q3  Spinner   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVs1q3"
                    style="@style/cardView">

                    <LinearLayout style="@style/hlinearlayout">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bottom">

                            <TextView
                                android:id="@+id/qtxt_s1q3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/q_s1q3"
                                android:text="@string/s1q3" />

                            <TextView
                                android:id="@+id/q_s1q3"
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/qtxt_s1q3"
                                android:layout_alignBottom="@id/qtxt_s1q3"
                                android:text="@string/Q_s1q3" />
                        </RelativeLayout>

                        <Spinner
                            android:id="@+id/s1q3"
                            style="@style/spinner"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="@string/name" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- s1q4  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVs1q4"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_s1q4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_s1q4"
                            android:text="@string/s1q4" />

                        <TextView
                            android:id="@+id/q_s1q4"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_s1q4"
                            android:layout_alignBottom="@id/qtxt_s1q4"
                            android:text="@string/Q_s1q4" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/s1q4"
                        style="@style/EditTextAlphaNumeric"
                        android:layout_height="100dp"
                        android:hint="@string/address"
                        android:inputType="textMultiLine"
                        android:maxLines="4" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- s1q8  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVs1q8"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_s1q8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_s1q8"
                            android:text="@string/s1q8" />

                        <TextView
                            android:id="@+id/q_s1q8"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_s1q8"
                            android:layout_alignBottom="@id/qtxt_s1q8"
                            android:text="@string/Q_s1q8" />
                    </RelativeLayout>


                    <RadioGroup
                        android:id="@+id/s1q8"
                        style="@style/radiogroup"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/s1q8a"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/s1q8b"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/no" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- s1q8reason  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVs1q8r"
                style="@style/cardView"
                android:visibility='@{s1q8b.checked? View.VISIBLE : View.GONE}'>

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_s1q8r"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_s1q8r"
                            android:text="@string/s1q8r" />

                        <TextView
                            android:id="@+id/q_s1q8r"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_s1q8r"
                            android:layout_alignBottom="@id/qtxt_s1q8r"
                            android:text="@string/Q_s1q8reason" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/s1q8r"
                        style="@style/EditTextAlphaNumeric"
                        android:hint="@string/reason"
                        android:text='@{s1q8b.checked? s1q8r.getText().toString : "" }' />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout style="@style/hlinearlayout">

                <Button
                    android:id="@+id/btn_End"
                    style="@style/buttonEnd"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_Continue"
                    style="@style/buttonNext"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>