                                    android:layout_weight="1"
                                    android:text="@string/k219a" />

                                <RadioButton
                                    android:id="@+id/k219b"
                                    style="@style/radiobutton"
                                    android:layout_weight="1"
                                    android:text="@string/k219b" />

