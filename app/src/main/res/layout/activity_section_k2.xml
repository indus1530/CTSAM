                <!-- k220  Spinner and Input-Numeric   -->
                <LinearLayout
                    android:id="@+id/fldGrpCVk03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility='@{k219b.checked? View.VISIBLE : View.GONE}'>

                    <!-- k220  Spinner and Input   -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/fldGrpCVk220"
                        style="@style/cardView">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

