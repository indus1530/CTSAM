                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/fus1q7" />

                    <RadioGroup
                        android:id="@+id/fus1q7"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/fus1q7a"
                            style="@style/radiobutton"
                            android:text="@string/fus1q7a" />

                        <RadioButton
                            android:id="@+id/fus1q7b"
                            style="@style/radiobutton"
                            android:text="@string/fus1q7b" />

                        <RadioButton
                            android:id="@+id/fus1q7c"
                            style="@style/radiobutton"
                            android:text="@string/fus1q7c" />

                        <RadioButton
                            android:id="@+id/fus1q7d"
                            style="@style/radiobutton"
                            android:text="@string/fus1q7d" />

                        <RadioButton
                            android:id="@+id/fus1q7e"
                            style="@style/radiobutton"
                            android:text="@string/fus1q7e" />

                        <RadioButton
                            android:id="@+id/fus1q7f"
                            style="@style/radiobutton"
                            android:text="@string/fus1q7f" />

                        <RadioButton
                            android:id="@+id/fus1q7g"
                            style="@style/radiobutton"
                            android:text="@string/fus1q7g" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- fus1q8  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfus1q8"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/fus1q8" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/fus1q8"
                        style="@style/EditTextNum"
                        android:hint="@string/fus1q8"
                        android:inputType="number"
                        app:mask="##"
                        app:maxValue="0"
                        app:minValue="0"
                        app:type="range" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- fus1q9  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfus1q9"
