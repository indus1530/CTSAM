<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.ctsam.ui.sections.Section1Activity" />
    </data>

    <ScrollView
        style="@style/i_scrollview"
        android:layoutDirection="rtl"
        android:textDirection="rtl">

        <LinearLayout
            android:id="@+id/fldGrpSection1"
            style="@style/vlinearlayout">

            <!-- fus1q1  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfus1q1"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/fus1q1" />

                    <RadioGroup
                        android:id="@+id/fus1q1"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/fus1q1a"
                            style="@style/radiobutton"
                            android:text="@string/fus1q1a" />

                        <RadioButton
                            android:id="@+id/fus1q1b"
                            style="@style/radiobutton"
                            android:text="@string/fus1q1b" />

                        <RadioButton
                            android:id="@+id/fus1q1c"
                            style="@style/radiobutton"
                            android:text="@string/fus1q1c" />

                        <RadioButton
                            android:id="@+id/fus1q1d"
                            style="@style/radiobutton"
                            android:text="@string/fus1q1d" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- fus1q2  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfus1q2"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/fus1q2" />

                    <RadioGroup
                        android:id="@+id/fus1q2"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/fus1q2a"
                            style="@style/radiobutton"
                            android:text="@string/fus1q2a" />

                        <RadioButton
                            android:id="@+id/fus1q2b"
                            style="@style/radiobutton"
                            android:text="@string/fus1q2b" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- fus1q3  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfus1q3"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/fus1q3" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/fus1q3"
                        style="@style/EditTextNum"
                        android:hint="@string/fus1q3"
                        android:inputType="number"
                        app:mask="##"
                        app:maxValue="59999"
                        app:minValue="10001"
                        app:type="range" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- fus1q4  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfus1q4"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/fus1q4" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/fus1q4"
                        style="@style/EditTextNum"
                        android:hint="@string/fus1q4"
                        android:inputType="number"
                        app:mask="##"
                        app:maxValue="10"
                        app:minValue="1"
                        app:type="range" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- fus1q5  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfus1q5"
