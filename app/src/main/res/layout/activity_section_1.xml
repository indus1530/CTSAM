                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/fus1q5" />

                    <EditText
                        android:id="@+id/fus1q5"
                        style="@style/EditTextAlpha"
                        android:hint="@string/fus1q5" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- fus1q6  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfus1q6"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/fus1q6" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/fus1q6"
                        style="@style/EditTextNum"
                        android:hint="@string/fus1q6"
                        android:inputType="number"
                        app:mask="##"
                        app:maxValue="10"
                        app:minValue="1"
                        app:type="range" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- fus1q7  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfus1q7"
