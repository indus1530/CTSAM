<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_scans_bl.ui.sections.SectionD9Activity" />
    </data>

    <ScrollView
        style="@style/i_scrollview"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarSize="10dip"
        android:layoutDirection="ltr"
        tools:context=".ui.sections.SectionD9Activity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fldGrpSectionD9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- d901  Spinner   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd901"
                style="@style/cardView">

                <LinearLayout
                    style="@style/linearlayout_view"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/i_textview"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/d901" />

                    <Spinner
                        android:id="@+id/d901"
                        style="@style/spinner"
                        android:layout_width="0dp"
                        android:layout_weight="1" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- d9021  Heading   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd9021"
                style="@style/cardView">

                <LinearLayout
                    style="@style/linearlayout_view_wt_bound"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/d9021"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- d9021  Time-Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd902a"
                style="@style/cardView">

                <LinearLayout
                    style="@style/linearlayout_view_wt_bound"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/i_textview"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/d902" />

                    <io.blackbox_vision.datetimepickeredittext.view.TimePickerInputEditText
                        android:id="@+id/d9021"
                        style="@style/EditTextNum"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:hint="@string/time"
                        app:is24HourView="true"
                        app:timeFormat="HH:mm" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- d9031  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd903a"
                style="@style/cardView">

                <LinearLayout
                    style="@style/linearlayout_view_wt_bound"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/i_textview"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/d903" />

                    <EditText
                        android:id="@+id/d9031"
                        style="@style/EditTextAlpha"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="@string/specify" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- d9041  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd904a"
                style="@style/cardView">

                <LinearLayout
                    style="@style/linearlayout_view_wt_bound"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/i_textview"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/d904" />

                    <EditText
                        android:id="@+id/d9041"
                        style="@style/EditTextAlpha"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="@string/specify" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- d9051  EditText 2   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd9051"
                style="@style/cardView">

                <LinearLayout
                    style="@style/linearlayout_view_wt_bound"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/i_textview"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="@string/d905" />

                        <EditText
                            android:id="@+id/d9051a"
                            style="@style/EditTextNum"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="@string/d905a" />

                        <EditText
                            android:id="@+id/d9051b"
                            style="@style/EditTextNum"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="@string/d905b" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- d9061  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd9061"
                style="@style/cardView">

                <LinearLayout
                    style="@style/linearlayout_view_wt_bound"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/d906" />

                    <RadioGroup
                        android:id="@+id/d9061"
                        style="@style/radiogroup"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/d9061a"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/d906a" />

                        <RadioButton
                            android:id="@+id/d9061b"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/d906b" />

                        <RadioButton
                            android:id="@+id/d9061c"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/d906c" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- d9071  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd9071"
                style="@style/cardView">

                <LinearLayout
                    style="@style/linearlayout_view_wt_bound"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/d907" />

                    <RadioGroup
                        android:id="@+id/d9071"
                        style="@style/radiogroup"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/d9071a"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/d907a" />

                        <RadioButton
                            android:id="@+id/d9071b"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/d907b" />

                        <RadioButton
                            android:id="@+id/d9071c"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/d907c" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEnd"
                    style="@style/buttons_bottom"
                    android:background="@android:color/holo_orange_light"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/end_interview" />

                <Button
                    android:id="@+id/btnNext"
                    style="@style/buttons_bottom"
                    android:background="@android:color/holo_blue_dark"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>