<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.sections.SectionK1Activity">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_scans_bl.ui.sections.SectionK1Activity" />
    </data>

    <ScrollView
        style="@style/i_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/fldGrpSectionK1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- k101  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVk101"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/k101" />

                    <RadioGroup
                        android:id="@+id/k101"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/k101a"
                            style="@style/radiobutton"
                            android:text="@string/k101a" />

                        <RadioButton
                            android:id="@+id/k101b"
                            style="@style/radiobutton"
                            android:text="@string/k101b" />

                        <RadioButton
                            android:id="@+id/k101c"
                            style="@style/radiobutton"
                            android:text="@string/k101c" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- k101_title  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVk101_title"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/k101_title" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- k102  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVk102"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/k102" />

                    <RadioGroup
                        android:id="@+id/k102"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/k102a"
                            style="@style/radiobutton"
                            android:text="@string/k102a" />

                        <RadioButton
                            android:id="@+id/k102b"
                            style="@style/radiobutton"
                            android:text="@string/k102b" />

                        <RadioButton
                            android:id="@+id/k102c"
                            style="@style/radiobutton"
                            android:text="@string/k102c" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- k103  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVk103"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/k103" />

                    <RadioGroup
                        android:id="@+id/k103"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/k103a"
                            style="@style/radiobutton"
                            android:text="@string/k103a" />

                        <RadioButton
                            android:id="@+id/k103b"
                            style="@style/radiobutton"
                            android:text="@string/k103b" />

                        <RadioButton
                            android:id="@+id/k103c"
                            style="@style/radiobutton"
                            android:text="@string/k103c" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- k104  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVk104"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/k104" />

                    <RadioGroup
                        android:id="@+id/k104"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/k104a"
                            style="@style/radiobutton"
                            android:text="@string/k104a" />

                        <EditText
                            android:id="@+id/k104at"
                            style="@style/radiobutton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/k104a"
                            android:tag="k104a"
                            android:text='@{k104a.checked? k104at.getText().toString() : ""}'
                            android:visibility='@{k104a.checked? View.VISIBLE : View.GONE}' />

                        <RadioButton
                            android:id="@+id/k104b"
                            style="@style/radiobutton"
                            android:text="@string/k104b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    style="@style/button"
                    android:layout_marginRight="10dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_Continue"
                    style="@style/button"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>