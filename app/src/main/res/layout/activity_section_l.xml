<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.sections.SectionLActivity">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_scans_bl.ui.sections.SectionLActivity" />
    </data>

    <ScrollView
        style="@style/i_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/fldGrpSectionL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- l101  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVl101"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/l101" />

                    <EditText
                        android:id="@+id/l101"
                        style="@style/textInputName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/l101"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- l101_title  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVl101_title"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/l101_title" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- l101_title2  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVl101_title2"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/l101_title2" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- l102  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVl102"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/l102" />

                    <RadioGroup
                        android:id="@+id/l102"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/l102a"
                            style="@style/radiobutton"
                            android:text="@string/l102a" />

                        <RadioButton
                            android:id="@+id/l102b"
                            style="@style/radiobutton"
                            android:text="@string/l102b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- l103  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVl103"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/l103" />

                    <RadioGroup
                        android:id="@+id/l103"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/l103a"
                            style="@style/radiobutton"
                            android:text="@string/l103a" />

                        <RadioButton
                            android:id="@+id/l103b"
                            style="@style/radiobutton"
                            android:text="@string/l103b" />

                        <RadioButton
                            android:id="@+id/l103c"
                            style="@style/radiobutton"
                            android:text="@string/l103c" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- l104  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVl104"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/l104" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/l104"
                        style="@style/EditTextAlphaNumeric"
                        app:mask="##"
                        app:maxValue="20"
                        app:minValue="6"
                        app:type="range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/l104"
                        android:inputType="number" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- l104_title  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVl104_title"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/l104_title" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    style="@style/button"
                    android:layout_marginRight="10dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_Continue"
                    style="@style/button"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</layout>