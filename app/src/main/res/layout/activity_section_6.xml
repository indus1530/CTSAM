<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.ctsam.ui.sections.Section6Activity" />
    </data>

    <ScrollView
        style="@style/i_scrollview"
        android:layoutDirection="rtl"
        android:textDirection="rtl">

        <LinearLayout
            android:id="@+id/fldGrpSection6"
            style="@style/vlinearlayout">

            <!-- fus6q1  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfus6q1"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_fus6q1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_fus6q1"
                            android:text="@string/fus6q1" />

                        <TextView
                            android:id="@+id/q_fus6q1"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_fus6q1"
                            android:layout_alignBottom="@id/qtxt_fus6q1"
                            android:text="@string/Q_fus6q1" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/fus6q1"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/fus6q1a"
                            style="@style/radiobutton"
                            android:text="@string/fus6q1a" />

                        <RadioButton
                            android:id="@+id/fus6q1b"
                            style="@style/radiobutton"
                            android:text="@string/fus6q1b" />

                        <RadioButton
                            android:id="@+id/fus6q1c"
                            style="@style/radiobutton"
                            android:text="@string/fus6q1c" />

                        <RadioButton
                            android:id="@+id/fus6q1d"
                            style="@style/radiobutton"
                            android:text="@string/fus6q1d" />

                        <RadioButton
                            android:id="@+id/fus6q1e"
                            style="@style/radiobutton"
                            android:text="@string/fus6q1e" />

                        <RadioButton
                            android:id="@+id/fus6q1f"
                            style="@style/radiobutton"
                            android:text="@string/fus6q1f" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- fus6q2  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfus6q2"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_fus6q2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_fus6q2"
                            android:text="@string/fus6q2" />

                        <TextView
                            android:id="@+id/q_fus6q2"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_fus6q2"
                            android:layout_alignBottom="@id/qtxt_fus6q2"
                            android:text="@string/Q_fus6q2" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/fus6q2"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/fus6q2a"
                            style="@style/radiobutton"
                            android:text="@string/fus6q2a" />

                        <EditText
                            android:id="@+id/fus6q2ax"
                            style="@style/EditTextAlphaNumeric"
                            android:hint="@string/fus6q2a"
                            android:tag="fus6q2a"
                            android:text='@{fus6q2a.checked? fus6q2ax.getText().toString() : ""}'
                            android:visibility='@{fus6q2a.checked? View.VISIBLE : View.GONE}' />

                        <RadioButton
                            android:id="@+id/fus6q2b"
                            style="@style/radiobutton"
                            android:text="@string/fus6q2b" />

                        <EditText
                            android:id="@+id/fus6q2bx"
                            style="@style/EditTextAlphaNumeric"
                            android:hint="@string/fus6q2b"
                            android:tag="fus6q2b"
                            android:text='@{fus6q2b.checked? fus6q2bx.getText().toString() : ""}'
                            android:visibility='@{fus6q2b.checked? View.VISIBLE : View.GONE}' />

                        <RadioButton
                            android:id="@+id/fus6q2c"
                            style="@style/radiobutton"
                            android:text="@string/fus6q2c" />

                        <EditText
                            android:id="@+id/fus6q2cx"
                            style="@style/EditTextAlphaNumeric"
                            android:hint="@string/fus6q2c"
                            android:tag="fus6q2c"
                            android:text='@{fus6q2c.checked? fus6q2cx.getText().toString() : ""}'
                            android:visibility='@{fus6q2c.checked? View.VISIBLE : View.GONE}' />

                        <RadioButton
                            android:id="@+id/fus6q2d"
                            style="@style/radiobutton"
                            android:text="@string/fus6q2d" />

                        <EditText
                            android:id="@+id/fus6q2dx"
                            style="@style/EditTextAlphaNumeric"
                            android:hint="@string/fus6q2d"
                            android:tag="fus6q2d"
                            android:text='@{fus6q2d.checked? fus6q2dx.getText().toString() : ""}'
                            android:visibility='@{fus6q2d.checked? View.VISIBLE : View.GONE}' />

                        <RadioButton
                            android:id="@+id/fus6q2e"
                            style="@style/radiobutton"
                            android:text="@string/fus6q2e" />

                        <EditText
                            android:id="@+id/fus6q2ex"
                            style="@style/EditTextAlphaNumeric"
                            android:hint="@string/fus6q2e"
                            android:tag="fus6q2e"
                            android:text='@{fus6q2e.checked? fus6q2ex.getText().toString() : ""}'
                            android:visibility='@{fus6q2e.checked? View.VISIBLE : View.GONE}' />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- fus6q3  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVfus6q3"
                style="@style/cardView">

                <LinearLayout style="@style/hlinearlayout">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_fus6q3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_fus6q3"
                            android:text="@string/fus6q3" />

                        <TextView
                            android:id="@+id/q_fus6q3"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_fus6q3"
                            android:layout_alignBottom="@id/qtxt_fus6q3"
                            android:text="@string/Q_fus6q3" />

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/fus6q3"
                        style="@style/EditTextNum"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="@string/fus6q3" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout style="@style/hlinearlayout">

                <Button
                    android:id="@+id/btn_End"
                    style="@style/buttonEnd"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_Continue"
                    style="@style/buttonNext"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>