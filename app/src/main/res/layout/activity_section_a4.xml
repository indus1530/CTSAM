<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_scans_bl.ui.sections.SectionA4Activity" />
    </data>

    <ScrollView
        style="@style/i_scrollview"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:layoutDirection="rtl"
        android:scrollbarSize="10dip"
        tools:context=".ui.sections.SectionD4Activity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fldGrpSectionA4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- a401  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVa401"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/a401" />

                        <RadioGroup
                            android:id="@+id/a401"
                            style="@style/radiogroup">

                            <RadioButton
                                android:id="@+id/a401a"
                                style="@style/radiobutton"
                                android:text="@string/a401a" />

                            <RadioButton
                                android:id="@+id/a401b"
                                style="@style/radiobutton"
                                android:text="@string/a401b" />

                            <RadioButton
                                android:id="@+id/a401c"
                                style="@style/radiobutton"
                                android:text="@string/a401c" />

                            <RadioButton
                                android:id="@+id/a401d"
                                style="@style/radiobutton"
                                android:text="@string/a401d" />

                            <RadioButton
                                android:id="@+id/a40196"
                                style="@style/radiobutton"
                                android:text="@string/other" />

                            <EditText
                                android:id="@+id/a40196x"
                                style="@style/EditTextAlpha"
                                android:hint="@string/specify"
                                android:text='@{a40196.checked? a40196x.getText().toString() : ""}'
                                android:visibility='@{a40196.checked? View.VISIBLE : View.GONE }' />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:id="@+id/fldGrpCVa01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- a402  Radio   -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/fldGrpCVa402"
                        style="@style/cardView">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/i_textview"
                                android:text="@string/a402" />

                            <RadioGroup
                                android:id="@+id/a402"
                                style="@style/radiogroup"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/a402a"
                                    style="@style/radiobutton"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="@string/a402a" />

                                <RadioButton
                                    android:id="@+id/a402b"
                                    style="@style/radiobutton"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="@string/a402b" />

                            </RadioGroup>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- a403  CheckBox   -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/fldGrpCVa403"
                        style="@style/cardView">

                        <LinearLayout
                            style="@style/linearlayout_view"
                            android:orientation="vertical">

                            <TextView
                                style="@style/i_textview"
                                android:text="@string/a403" />

                            <LinearLayout
                                android:id="@+id/a403check"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:tag="0">

                                <CheckBox
                                    android:id="@+id/a403a"
                                    style="@style/checkbox"
                                    android:text="@string/a403a" />

                                <CheckBox
                                    android:id="@+id/a403b"
                                    style="@style/checkbox"
                                    android:text="@string/a403b" />

                                <CheckBox
                                    android:id="@+id/a403c"
                                    style="@style/checkbox"
                                    android:text="@string/a403c" />

                                <CheckBox
                                    android:id="@+id/a403d"
                                    style="@style/checkbox"
                                    android:text="@string/a403d" />

                            </LinearLayout>

                            <CheckBox
                                android:id="@+id/a40397"
                                style="@style/checkbox"
                                android:tag="-1"
                                android:text="@string/none" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/fldGrpCVa02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- a404  Radio   -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/fldGrpCVa404"
                        style="@style/cardView">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/i_textview"
                                android:text="@string/a404" />

                            <RadioGroup
                                android:id="@+id/a404"
                                style="@style/radiogroup"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/a404a"
                                    style="@style/radiobutton"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="@string/yes" />

                                <RadioButton
                                    android:id="@+id/a404b"
                                    style="@style/radiobutton"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="@string/no" />

                            </RadioGroup>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- a405  CheckBox   -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/fldGrpCVa405"
                        style="@style/cardView"
                        android:visibility='@{a404b.checked? View.GONE : View.VISIBLE}'>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/i_textview"
                                android:text="@string/a405" />

                            <LinearLayout
                                android:id="@+id/a405check"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:tag="0">

                                <CheckBox
                                    android:id="@+id/a405a"
                                    style="@style/checkbox"
                                    android:checked="@{a40597.checked ? false : false}"
                                    android:enabled="@{a40597.checked ? false : true}"
                                    android:text="@string/a405a" />

                                <CheckBox
                                    android:id="@+id/a405b"
                                    style="@style/checkbox"
                                    android:checked="@{a40597.checked ? false : false}"
                                    android:enabled="@{a40597.checked ? false : true}"
                                    android:text="@string/a405b" />

                                <CheckBox
                                    android:id="@+id/a405c"
                                    style="@style/checkbox"
                                    android:checked="@{a40597.checked ? false : false}"
                                    android:enabled="@{a40597.checked ? false : true}"
                                    android:text="@string/a405c" />

                                <CheckBox
                                    android:id="@+id/a405d"
                                    style="@style/checkbox"
                                    android:checked="@{a40597.checked ? false : false}"
                                    android:enabled="@{a40597.checked ? false : true}"
                                    android:text="@string/a405d" />

                                <CheckBox
                                    android:id="@+id/a40597"
                                    style="@style/checkbox"
                                    android:text="@string/none" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <!-- a406  CheckBox   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVa406"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/a406" />

                        <TextView
                            style="@style/textView3Head"
                            android:text="@string/a406a_title" />

                        <LinearLayout
                            android:id="@+id/a406check"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:tag="0">

                            <CheckBox
                                android:id="@+id/a406a"
                                style="@style/checkbox"
                                android:checked="@{a40697.checked ? false : false}"
                                android:enabled="@{a40697.checked ? false : true}"
                                android:text="@string/a406a" />

                            <CheckBox
                                android:id="@+id/a406b"
                                style="@style/checkbox"
                                android:checked="@{a40697.checked ? false : false}"
                                android:enabled="@{a40697.checked ? false : true}"
                                android:text="@string/a406b" />

                            <CheckBox
                                android:id="@+id/a406c"
                                style="@style/checkbox"
                                android:checked="@{a40697.checked ? false : false}"
                                android:enabled="@{a40697.checked ? false : true}"
                                android:text="@string/a406c" />

                            <CheckBox
                                android:id="@+id/a406d"
                                style="@style/checkbox"
                                android:checked="@{a40697.checked ? false : false}"
                                android:enabled="@{a40697.checked ? false : true}"
                                android:text="@string/a406d" />

                            <CheckBox
                                android:id="@+id/a406e"
                                style="@style/checkbox"
                                android:checked="@{a40697.checked ? false : false}"
                                android:enabled="@{a40697.checked ? false : true}"
                                android:text="@string/a406e" />

                            <CheckBox
                                android:id="@+id/a406f"
                                style="@style/checkbox"
                                android:checked="@{a40697.checked ? false : false}"
                                android:enabled="@{a40697.checked ? false : true}"
                                android:text="@string/a406f" />

                            <CheckBox
                                android:id="@+id/a406g"
                                style="@style/checkbox"
                                android:checked="@{a40697.checked ? false : false}"
                                android:enabled="@{a40697.checked ? false : true}"
                                android:text="@string/a406g" />

                            <CheckBox
                                android:id="@+id/a406h"
                                style="@style/checkbox"
                                android:checked="@{a40697.checked ? false : false}"
                                android:enabled="@{a40697.checked ? false : true}"
                                android:text="@string/a406h" />

                            <CheckBox
                                android:id="@+id/a40697"
                                style="@style/checkbox"
                                android:text="@string/a40697" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEnd"
                    style="@style/buttons_bottom"
                    android:background="@android:color/holo_orange_light"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/end_interview" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->

                <Button
                    android:id="@+id/btnNext"
                    style="@style/buttons_bottom"
                    android:background="@android:color/holo_blue_dark"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>